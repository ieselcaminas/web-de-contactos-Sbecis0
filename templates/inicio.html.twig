{% extends 'base.html.twig' %}

{% block title %}Contactos{% endblock %}

{% block body %}
    <h1>Lista de Contactos</h1>

    <p><a class="btn btn-primary" href="{{ path('nuevo') }}">Añadir contacto</a></p>

    {% if contactos is not empty %}
        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for contacto in contactos %}
                    <tr>
                        <td>{{ contacto.id }}</td>
                        <td>{{ contacto.nombre }}</td>
                        <td>{{ contacto.email }}</td>
                        <td>{{ contacto.telefono ?? '—' }}</td>
                        <td>
                            <a href="{{ path('ficha_contacto', { codigo: contacto.id }) }}" class="btn btn-sm btn-info">Ver</a>
                            <a href="{{ path('editar', { codigo: contacto.id }) }}" class="btn btn-sm btn-warning">Editar</a>
                            <a href="{{ path('eliminar_contacto', { id: contacto.id }) }}" class="btn btn-sm btn-danger"
                            onclick="return confirm('¿Seguro que quieres eliminar este contacto?');">Eliminar</a>

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No hay contactos disponibles.</p>
    {% endif %}
{% endblock %}
